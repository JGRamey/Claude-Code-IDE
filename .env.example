# Claude Code IDE Environment Configuration

# Development Mode
NODE_ENV=development

# Application URLs
VITE_APP_URL=http://localhost:3000
VITE_API_URL=http://localhost:3001
VITE_PREVIEW_URL=http://localhost:8080

# Claude Code CLI Configuration
VITE_CLAUDE_CODE_WS_URL=ws://localhost:3001
CLAUDE_CODE_API_KEY=your_anthropic_api_key_here
CLAUDE_CODE_MODE=development
CLAUDE_CODE_WORKSPACE=/app
CLAUDE_CODE_LOG_LEVEL=info

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# Container Ports
APP_PORT=3000
WEBSOCKET_PORT=3001
PREVIEW_PORT=8080
API_PORT=3002

# Database Configuration (if using)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=claude_code_ide
POSTGRES_USER=claude
POSTGRES_PASSWORD=secure_password_123

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# File System Configuration
CHOKIDAR_USEPOLLING=true
WATCHPACK_POLLING=true
FILE_WATCH_INTERVAL=1000

# Performance Settings
MAX_CONCURRENT_AGENTS=3
AGENT_TIMEOUT_MS=30000
MEMORY_LIMIT=2GB
CPU_LIMIT=2

# Security Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
MAX_REQUEST_SIZE=50MB
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/claude-code-ide.log
LOG_MAX_FILES=5
LOG_MAX_SIZE=10MB

# WebSocket Configuration
WS_CORS_ORIGIN=http://localhost:3000,http://localhost:5173
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=100

# Agent Configuration
AGENT_FRONTEND_ENABLED=true
AGENT_BACKEND_ENABLED=true
AGENT_DATABASE_ENABLED=false
AGENT_TESTING_ENABLED=true
AGENT_DEPLOYMENT_ENABLED=true
AGENT_SECURITY_ENABLED=false

# Development Features
HOT_RELOAD=true
AUTO_SAVE=true
FORMAT_ON_SAVE=true
LIVE_PREVIEW=true
SOURCE_MAPS=true

# Git Integration
GIT_AUTO_COMMIT=false
GIT_COMMIT_TEMPLATE="feat: {description} [claude-code]"

# VS Code Integration
VSCODE_SETTINGS_SYNC=true
VSCODE_EXTENSION_RECOMMENDATIONS=true

# Analytics and Telemetry (set to false to disable)
ANALYTICS_ENABLED=false
TELEMETRY_ENABLED=false
ERROR_REPORTING=false

# Advanced Features
EXPERIMENTAL_FEATURES=false
BETA_FEATURES=false
DEBUG_MODE=false

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1GB
CACHE_DIRECTORY=./.claude-code/cache

# Backup Configuration
AUTO_BACKUP=true
BACKUP_INTERVAL=3600000
BACKUP_RETENTION_DAYS=7
BACKUP_DIRECTORY=./backups